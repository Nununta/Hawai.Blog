<h1>Shopリスト</h1>
<div class="row">
  <div class="col-md-12">
	<table class="table table-striped">
	  <thead class="thead-dark">
	  <tr>
		<th>予定</th>
		<th>Shop</th>
		<th>店詳細</th>
		<th>場所</th>
		<th>Menu</th>
	  </tr>
	  </thead>
	  <tbody>
	  <% @shops.each do |shop| %>
		<tr>
		  <td><%= shop.date %></td>
		  <td><%= link_to shop.shopname, shop_path(shop) %></td>
		  <td><%= shop.content %></td>
		  <td><%= shop.place %></td>
		  <td>[<%=link_to "Edit", edit_shop_path(shop) %>]
			[<%=link_to "Delete", shop_path(shop), method: :delete, data:{ confirm: "削除してもよろしいでしょうか" }  %>]
		  </td>
		<tr>
	  <% end %>
	  </tbody>
	</table>
	<div>
	  <%= link_to "New Goods list", new_shop_path %>
	</div>
  </div>
</div>

