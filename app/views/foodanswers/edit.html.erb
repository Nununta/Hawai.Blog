<div>
  <h2>Update Answer</h2>
  <%= form_with model:[@food, @foodanswer], local: true do |f| %>
    <div class="form-group">
      <label>Name</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Content</label>
      <%= f.text_area :content, class: "form-control" %>
    </div>
    <div class="text-center">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
